<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/test"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <Button
        android:id="@+id/networkimage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/test"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center"
        android:text="ImageLoading"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <Button
        android:id="@+id/json_request"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/networkimage"
        android:gravity="center"
        android:text="JSONObjectRequest"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <Button
        android:id="@+id/string_request"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/json_request"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center"
        android:text="StringObjectRequest"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <Button
        android:id="@+id/gson_response"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/string_request"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center"
        android:text="GSON Request"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <Button
        android:id="@+id/ssl_connection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gson_response"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center"
        android:text="SSL Connection"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <Button
        android:id="@+id/network"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ssl_connection"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center"
        android:text="Network"
        android:textAppearance="@android:style/TextAppearance.Small" />

    <Button
        android:id="@+id/update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ssl_connection"
        android:layout_marginTop="@dimen/margin_normal"
        android:gravity="center"
        android:text="Update"
        android:textAppearance="@android:style/TextAppearance.Small" />

</RelativeLayout>